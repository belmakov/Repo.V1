@{
    ViewData["Title"] = "Home Page";
}
<style>
    body {
        background-image: url('../images/apt.jpg');
        background-size: 100% 99%;
        background-repeat: no-repeat;
        background-color: white;
        background-position: center;
        min-height: 100%;
    }

    html {
        height: 100%;
        overflow-y: hidden;
    }
</style>

<div>
    <section class="section">
        <div class="container mt-5">
            <div class="row">
                <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                    <div class="login-brand">
                        <!--D<img src="../assets/img/stisla-fill.svg" alt="logo" width="100" class="shadow-light rounded-circle">-->
                    </div>
                    <div class="card card-primary">
                        <div class="card-header"><h4>Login</h4></div>
                        <div class="card-body">
                            <form method="POST" action="/Account/Login" novalidate="" class="needs-validation">
                                <div id="errorPanel" style="display:none">
                                    <div class="alert alert-danger" role="alert">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="userid">User Id</label>
                                    <input id="userid" type="text" class="form-control" name="userid" tabindex="1" required autofocus>
                                    <div class="invalid-feedback">
                                        Please fill in your email
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div>
                                        <label for="password">Password</label>
                                        <div class="float-right">
                                            <a href="auth-forgot-password.html">
                                                Forgot Password?
                                            </a>
                                        </div>
                                    </div>
                                    <input id="password" type="password" class="form-control" name="password" tabindex="2" required>
                                    <div class="invalid-feedback">
                                        Please fill in your password
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" name="remember" class="custom-control-input" tabindex="3" id="remember-me">
                                        <label class="custom-control-label" for="remember-me">Remember Me</label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary btn-lg btn-block" tabindex="4" onclick="authenticate()">
                                        Login
                                    </button>
                                </div>
                            </form>
                            <div class="text-center mt-4 mb-3">
                                <!--D<div class="text-job text-muted">Login With Social</div>-->
                            </div>
                            <div class="row sm-gutters">
                                <div class="col-6">
                                    <!--D<a class="btn btn-block btn-social btn-facebook">
                                      <span class="fab fa-facebook"></span> Facebook
                                    </a>-->
                                </div>
                                <div class="col-6">
                                    <!--D<a class="btn btn-block btn-social btn-twitter">
                                      <span class="fab fa-twitter"></span> Twitter
                                    </a>-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-5">
                        <!--Don't have an account? <a href="auth-register.html">Create One</a>-->
                    </div>

                </div>

            </div>

        </div>

    </section>
</div>
<script src="~/js/account.js"></script>