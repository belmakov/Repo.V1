@model SectionViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create New Block";
}
<h2>Create Block</h2>
<form asp-action="Create" asp-controller="Blocks" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <table>
        <tr>
            <td><label asp-for="Name"></label></td>
            <td><input asp-for="Name" placeholder="Block Name"/></td>
            <td><span asp-validation-for="Name"></span></td>
            <td><input type="hidden" asp-for="CommunityId" value=@Model.CommunityId/></td>
        </tr>
    </table>
    <input type="submit" value="Create" />
</form>
<div>
    <a asp-action="Details" asp-controller="Communities" asp-route-communityId="@Model.CommunityId">Back to Community</a>
</div>
